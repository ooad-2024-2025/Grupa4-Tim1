<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<!-- Role-based Dashboard Content -->
@switch (Model.UserCategory)
{
    case Kategorija.Guest:
        @await Html.PartialAsync("_GuestDashboard", Model)
        break;
    case Kategorija.Clan:
        @await Html.PartialAsync("_ClanDashboard", Model)
        break;
    case Kategorija.Trener:
        @await Html.PartialAsync("_TrenerDashboard", Model)
        break;
    case Kategorija.Admin:
        @await Html.PartialAsync("_AdminDashboard", Model)
        break;
}


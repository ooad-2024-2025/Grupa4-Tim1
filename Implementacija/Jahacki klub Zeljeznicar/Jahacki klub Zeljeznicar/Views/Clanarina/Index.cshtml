@model Jahacki_klub_Zeljeznicar.Models.Clanarina

<!DOCTYPE html>
<html lang="bs">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Članarina - Jahački klub Željezničar</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 15px;
        }

        h1 {
            font-size: 32px;
            margin-bottom: 30px;
            font-weight: bold;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        h3 {
            font-size: 28px;
            margin-bottom: 15px;
        }

        .card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            background-color: #ffffff;
            text-align: center;
        }

            .card:hover {
                transform: scale(1.05);
            }

        .card-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .card-text {
            font-size: 18px;
            margin-bottom: 15px;
        }

        .btn-dark {
            background-color: #343a40;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            text-decoration: none;
        }

            .btn-dark:hover {
                background-color: #23272b;
            }

        .row {
            display: flex;
            gap: 15px;
            justify-content: space-between;
        }

        .col-md-4 {
            flex: 1;
        }

        .expiry-date {
            color: #dc3545;
            font-weight: bold;
        }

        .valid-date {
            color: #28a745;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>
            <span>Vaša članarina traje do:</span>
            <strong class="@(Model.IstekClanarine < DateTime.Now ? "expiry-date" : "valid-date")">
                @Model.IstekClanarine.ToString("dd.MM.yyyy")
            </strong>
        </h1>

        @if (Model.IstekClanarine < DateTime.Now)
        {
            <div style="background-color: #f8d7da; color: #721c24; padding: 15px; border-radius: 5px; margin-bottom: 20px; text-align: center;">
                <strong>Upozorenje:</strong> Vaša članarina je istekla. Molimo produžite članarinu.
            </div>
        }
        else if (Model.IstekClanarine <= DateTime.Now.AddDays(30))
        {
            <div style="background-color: #fff3cd; color: #856404; padding: 15px; border-radius: 5px; margin-bottom: 20px; text-align: center;">
                <strong>Napomena:</strong> Vaša članarina ističe uskoro. Preporučujemo produžavanje.
            </div>
        }

        <h3>Produži članarinu:</h3>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <h5 class="card-title">1 mjesec</h5>
                    <p class="card-text"><strong>70.00 KM</strong></p>
                    <a href="@Url.Action("Placanje", "Clanarina", new { mjeseci = 1 })" class="btn btn-dark">Produži</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <h5 class="card-title">6 mjeseci</h5>
                    <p class="card-text"><strong>400.00 KM</strong></p>
                    <a href="@Url.Action("Placanje", "Clanarina", new { mjeseci = 6 })" class="btn btn-dark">Produži</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <h5 class="card-title">12 mjeseci</h5>
                    <p class="card-text"><strong>700.00 KM</strong></p>
                    <a href="@Url.Action("Placanje", "Clanarina", new { mjeseci = 12 })" class="btn btn-dark">Produži</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
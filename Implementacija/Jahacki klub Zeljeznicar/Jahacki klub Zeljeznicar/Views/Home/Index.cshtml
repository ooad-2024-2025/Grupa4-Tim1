@model IEnumerable<Trail>
@{
    ViewData["Title"] = "Home";
}

<style>
    .hero-section {
        width: 100vw;
        height: 100vh;
        background: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)), 
                    url('https://images.unsplash.com/photo-1553284965-83fd3e82fa5a?ixlib=rb-4.0.3&auto=format&fit=crop&w=1950&q=80') 
                    center/cover no-repeat;
        display: flex;
        align-items: center;
        color: white;
        min-height: 800px;
    }
    main{
        width: auto!important;
    }
    .container_content{
        max-width: 1400px;
        margin: 0;
        padding: 0;
    }

    .hero-content {
        max-width: 800px;
        padding: 0 50px;
        text-align: left;
        margin-left: 80px;
    }

        .hero-content h1 {
            color:white;
            font-size: 3.5rem;
            margin-bottom: 1rem;
            font-weight: 700;
        }

        .hero-content p {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            line-height: 1.8;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
        }

    .btn-primary {
        background-color: #fff;
        color: #333;
        padding: 12px 30px;
        border: none;
        border-radius: 5px;
        font-size: 1.1rem;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
=            text-decoration: none;
            background-color: #333;
            border: none;
        }

    .trails-section {
        padding: 80px 0;
        background-color: #f8f9fa;
    }

    .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 30px;
    }
    .container-bottom {
        max-width: 1400px;
        margin: 0;
        padding: 0;
    }
    .trails-container {
        padding: 40px 20px;
        max-width: 1400px;
        margin: 0 auto;
    }

    .page-title {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 50px;
        color: #333;
        font-weight: 700;
    }

    .trails-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 30px;
        margin-bottom: 40px;
    }

    .trail-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid #e0e0e0;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .trail-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        }

    .trail-content {
        padding: 25px;
        text-align: center;
    }

    .trail-title {
        font-size: 1.4rem;
        font-weight: 700;
        margin-bottom: 15px;
        color: #333;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .trail-info {
        margin-bottom: 20px;
    }

    .trail-date {
        font-size: 1rem;
        color: #666;
        margin-bottom: 10px;
        font-weight: 500;
    }

    .trail-description {
        color: #777;
        margin-bottom: 25px;
        line-height: 1.6;
        font-size: 0.95rem;
        min-height: 60px;
    }

    .trail-actions {
        display: flex;
        justify-content: center;
        flex-direction: column;
    }

    .btn-reserve {
        background-color: #333;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        width: 100%;
        text-align: center;
        transition: background-color 0.3s ease;
    }

        .btn-reserve:hover {
            background-color: #555;
            color: white;
            text-decoration: none;
        }

    .view-all-btn {
        text-align: center;
        margin-top: 40px;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        padding: 12px 30px;
        border: none;
        border-radius: 5px;
        font-size: 1.1rem;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #545b62;
            color: white;
            text-decoration: none;
        }

    .no-trails {
        text-align: center;
        padding: 60px 20px;
        color: #666;
    }

        .no-trails h3 {
            margin-bottom: 15px;
        }

    @@media (max-width: 768px) {
        .hero-content h1 {
            font-size: 2.5rem;
        }

        .trails-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<section class="hero-section">
    <div class="hero-content">
        <h1>Postani član kluba</h1>
        <p>Ukoliko želite da poboljšate svoje jahanje, ovo je prava opcija za Vas. Uživajte u druženju sa konjima u prirodi i stvorite nezaboravne uspomene.</p>
        <a href="@Url.Action("RegisterClan", "Account")" class="btn-primary">Prijavi se</a>
    </div>
</section>

<!-- Trails Section -->
<section class="trails-section" id="trails">
    <div class="container">
        <h2 class="pb-3">Prijavi se na trail</h2>
            
        @{
            var availableTrails = Model?.Where(t => string.IsNullOrEmpty(t.RezervatorId)).ToList();
        }
            
        @if (availableTrails != null && availableTrails.Any())
        {
            <div class="trails-grid">
            @foreach (var item in availableTrails)
            {
                <div class="trail-card">
                    <div class="trail-content">
                        <h3 class="trail-title">@Html.DisplayFor(modelItem => item.Naziv)</h3>

                        <div class="trail-info">
                            <div class="trail-date">
                                <strong>Datum:</strong> @item.Datum.ToString("dd.MM.yyyy")
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(item.Opis))
                        {
                            <div class="trail-description">
                                @(item.Opis.Length > 100 ? item.Opis.Substring(0, 100) + "..." : item.Opis)
                            </div>
                        }
                        else
                        {
                            <div class="trail-description">Nema opisa</div>
                        }

                        <div class="trail-actions">
                            <a asp-controller="Trail" asp-action="Details" asp-route-id="@item.Id" class="btn btn-reserve">Rezerviši</a>
                        </div>
                    </div>
                </div>
            }
        </div>
                
            <div class="view-all-btn">
                <a href="@Url.Action("Index", "Trail")" class="btn-secondary">Pogledaj sve trail-ove</a>
            </div>
        }
        else
        {
            <div class="no-trails">
                <h3>Trenutno nema dostupnih trail-ova</h3>
                <p>Provjerite ponovo uskoro!</p>
            </div>
        }
    </div>
</section>

<script>
    // Smooth scrolling for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            document.querySelector(this.getAttribute('href')).scrollIntoView({
                behavior: 'smooth'
            });
        });
    });
</script>
@{
    ViewData["Title"] = "Access Denied";
}

<div class="horse-form-container">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center text-danger">@ViewData["Title"]</h2>
            </div>
            <div class="card-body text-center">
                <p class="lead">Vaš nalog je privremeno zaključan zbog previše neuspešnih pokušaja prijave.</p>
                <p>Molimo pokušajte ponovo kasnije.</p>
                <a asp-action="Login" class="btn btn-primary">Nazad na prijavu</a>
            </div>
        </div>
    </div>
</div>